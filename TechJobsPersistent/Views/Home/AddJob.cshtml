@using TechJobsPersistent.ViewModels

@model AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" />
        <span></span>
    </div>

    <div class="form-group">
        <label for="Employers">Employers</label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>

    </div>

    <div class="form-group">
        @foreach (Skill item in Model.Skills)
        {
            <label>@item.Name</label>
            <input type="checkbox" name="selectedSkills" value="@item.Id" />
        }
    </div>

    <input type="submit" value="Add Job" />


    <div>
        <a asp-controller="Skill" asp-action="Add">Add Skill</a>
    </div>
</form>

